
@{
    ViewData["Title"] = "NewVacationerRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Registration</h2>

<div style="margin-top: 100px">

</div>

<h3>Please take a few moments to fill out your profile</h3>

<form method="post" action="/VacationER/Confirmation">
    <div class="form-group">
        <label for="fName">First Name</label><input type="text" name="CustomerFirstName" id="fName" required class="form-control" />
        <label for="lName">Last Name</label><input type="text" name="CustomerLastName" id="lName" required class="form-control" /><br />
        <label for="email">Email:</label><input type="email" name="Email" id="email" required class="form-control" /><br />
        <label for="destination">Your Dream Destination:<input name="destination" id="destination" required class="form-control"/></label><br />
        <label for="maxbudget">Most you are willing to pay for your Dream Destination (minimum: $150.00)?<input type="number" name="maxbudget" id="maxbudget" min="150" class="form-control"/></label><br />
        <strong>Tell our awesome agents EVERYTHING you want in your dream destination:</strong><br /><textarea name="additionalInfo"></textarea><br />
        <input type="submit" />
    </div>
</form>

