@foreach (var value in Model)
{

    <form method="post" action="/Home/Index">
        <div class="form-group">
            <label for="fName">First Name</label><input type="text" name="CustomerFirstName" id="fName" value="@value.FirstName." />
            <label for="lName">Last Name</label><input type="text" name="CustomerLastName" id="lName" value="@value.LastName" /><br />
            <label for="email">Email:</label><input type="email" name="Email" id="email" value="@value.email"/><br />
            <label for="destination">Your Dream Destination:<input name="destination" id="destination" value="@value.DreamDestination" /></label><br />
            <label for="maxbudget">Most you are willing to pay for your Dream Destination (minimum: $150.00)?<input type="number" name="maxbudget" id="maxbudget" min="150" value="@value.budget" /></label><br />
            <strong>Tell our awesome agents EVERYTHING you want in your dream destination:</strong><br /><textarea name="additionalInfo" >@value.DestinationDescription</textarea><br />
            <input type="submit" value="Please verify the above information is correct and submit" />
        </div>
    </form>

}



