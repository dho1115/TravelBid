@model IEnumerable<VacationSuggestions>

@{
    ViewData["Title"] = "Index"; //This ViewData is actually used in the _Layout.cshtml under title.
    Layout = "~/Views/Shared/_Layout.cshtml";    

}

@{
    ViewData["Title"] = "Home Page";

}

<h1 style="text-align: center; color: red">STILL NOT SURE WHERE TO GO?</h1>
<h3 style="text-align: center">Here are some top picks chosed by our travel agents...</h3>

@foreach (var suggesteddestination in Model)
{     
    <h3>DESTINATION: @suggesteddestination.DestinationName</h3>
    <h3>POPULAR ATTRACTIONS: @suggesteddestination.Attractions</h3>
    <h3>BEST TIME TO GO: @suggesteddestination.BestTimeToGo</h3>
    <hr />
}

<h1>DON'T WAIT! Fill out the form below to have our awesome agents bid on these vacations for you (or any others you have in mind)!</h1>
